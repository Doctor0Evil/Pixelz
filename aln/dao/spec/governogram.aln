[validation_rules]
rule_1: "proposal_id must be unique"
rule_2: "quorum must be between 0.1 and 1.0"
rule_3: "threshold must be between 0.5 and 1.0"
rule_4: "duration_blocks must be between 1000 and 100000"
rule_5: "proposer must have minimum CHATAI balance"
rule_6: "execution_route must exist in module registry"

[footer]
validation_status: "CANONICAL"
