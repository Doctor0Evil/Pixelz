[logging_format]
format: "JSON structured logging"
required_fields: ["timestamp", "level", "node_id", "message", "context"]
optional_fields: ["block_height", "tx_hash", "error_code", "duration_ms"]
levels: ["DEBUG", "INFO", "WARN", "ERROR", "FATAL"]

[logging_examples]
example_1_title: "Transaction validation error"
example_1_content: |
  {
    "timestamp": "2024-11-27T12:34:56.789Z",
    "level": "ERROR",
    "node_id": "node_001",
    "message": "Transaction validation failed",
    "context": {
