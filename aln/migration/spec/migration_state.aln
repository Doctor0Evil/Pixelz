[header]
document_type: specification
title: "Migration State Schema - Cross-Chain Tracking"
scope: "Defines structure for Cantoâ†’ALN migration events"

[migration_state_schema]
migration_id: "string (unique identifier, typically source_tx_hash)"
source_chain: "string (e.g., 'canto')"
source_tx_hash: "bytes32 (transaction hash on source chain)"
source_block_height: "u64 (block height on source chain)"
dest_address: "addr (ALN destination address)"
asset_type: "string (asset identifier)"
amount: "u256 (amount migrated)"
proof_hash: "bytes32 (cryptographic proof)"
escrow_address: "string (source chain escrow address)"
status: "pending | verified | minted | failed"
created_at: "u64 (Unix timestamp)"
completed_at: "u64 (Unix timestamp or null)"
bridge_validator: "addr (ALN validator who processed)"

[migration_statuses]
pending: "Migration initiated on source chain, awaiting confirmation"
verified: "Source chain transaction verified, proof validated"
minted: "Assets minted on ALN chain successfully"
failed: "Migration failed verification or processing"

[migragraph_data_point]
timestamp: "u64 (when migration completed)"
amount: "u256 (amount migrated)"
cumulative_amount: "u256 (running total)"
migration_count: "u64 (total migrations so far)"

[migration_events]
event_lock: "Assets locked on source chain escrow"
event_proof_submitted: "Proof submitted to ALN bridge"
event_verified: "Proof verified by bridge validators"
event_mint: "Assets minted on ALN chain"

