[troubleshooting]

issue_node_wont_start:
  cause: "Data directory not initialized"
  solution: "Run: node cli/aln_node_cli.js init"

issue_transactions_failing:
  cause: "Invalid nonce or signature"
  solution: "Check nonce matches account state, verify signature format"

issue_explorer_not_connecting:
  cause: "Node API not running or CORS issue"
  solution: "Verify node is running on port 3000, check browser console"

issue_tests_failing:
  cause: "Dependencies not installed or outdated"
  solution: "Run: npm ci to clean install dependencies"

