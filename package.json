{
  "name": "aln-blockchain",
  "version": "1.0.0",
  "description": "ALN Blockchain - Production-grade blockchain with explorer, wallet, governance, and migration",
  "private": true,
  "workspaces": [
    "aln/core",
    "aln/explorer",
    "aln/wallet",
    "aln/migration",
    "aln/dao",
    "aln/tools",
    "aln/tests"
  ],
  "scripts": {
    "install-all": "npm install",
    "build": "npm run build --workspaces",
    "test": "npm run test --workspaces",
    "lint": "npm run lint --workspaces",
    "start:node": "npm run start --workspace=aln/core",
    "start:explorer": "npm run start --workspace=aln/explorer",
    "verify:scaffold": "node tools/verify_aln_scaffold.js",
    "dev": "concurrently \"npm run start:node\" \"npm run start:explorer\""
  },
  "devDependencies": {
    "concurrently": "^8.2.2",
    "eslint": "^8.57.0",
    "jest": "^29.7.0",
    "prettier": "^3.1.1"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=9.0.0"
  },
  "keywords": [
    "blockchain",
    "aln",
    "governance",
    "dao",
    "migration",
    "wallet",
    "explorer"
  ],
  "author": "ALN Development Team",
  "license": "MIT"
}
